<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rateFragmentRootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="24dp"
    android:background="@drawable/layout_background">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/set_rate_text_view_text"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rateFragmentTextViewPointHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/rate_point_hint_text" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/rateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/set_rate_button_text" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageButton
        android:id="@+id/rateFragmentCloseButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/custom_button"
        android:layout_gravity="end"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


</FrameLayout>